<script>
    // Ambil data dari localStorage
    let schedules = JSON.parse(localStorage.getItem("schedules")) || [];

    function saveToLocalStorage() {
        localStorage.setItem("schedules", JSON.stringify(schedules));
    }

    function loadSchedules() {
        const table = document.getElementById("scheduleTable");
        schedules.forEach(item => {
            const row = table.insertRow();
            row.insertCell(0).innerText = item.project;
            row.insertCell(1).innerText = item.date;
            row.insertCell(2).innerText = item.notes;
        });
    }

    function addSchedule() {
        const project = document.getElementById("project").value;
        const date = document.getElementById("date").value;
        const notes = document.getElementById("notes").value;

        if (!project || !date) {
            alert("Mohon isi nama proyek dan tanggal.");
            return;
        }

        const table = document.getElementById("scheduleTable");
        const row = table.insertRow();
        row.insertCell(0).innerText = project;
        row.insertCell(1).innerText = date;
        row.insertCell(2).innerText = notes;

        // Simpan ke array
        schedules.push({
            project: project,
            date: date,
            notes: notes
        });

        // Simpan ke localStorage
        saveToLocalStorage();

        // Reset input
        document.getElementById("project").value = "";
        document.getElementById("date").value = "";
        document.getElementById("notes").value = "";
    }

    // Load data saat halaman dibuka
    window.onload = loadSchedules;
</script>

